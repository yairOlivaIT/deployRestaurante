.p-10.grid.grid-cols-1.gap-5(class='sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3')
    each menu in menus 
        .rounded.overflow-hidden.shadow-lg
            .w.full.rounded.overflow-hidden.shadow-lg
                img.w-full(src=`img/${menu.imagen}.jpg` alt='imagen' class="h-72 md:h-64")
                .px-6.pt-4.text-left
                    .font-bold.text-2xl.text-gray-800 #{menu.nombre}
                    p.flex.text-2xl.text-gray-600(class="md:text-xl") Menú
                        img(src="/img/menu_icon.png" alt='imagen' class="w-12 md:w-10")
                    p.text-gray-700.text-xl(class="md:text-base")
                        | #{menu.descripcion.substr(0,90) + '...'}
                .text-center
                    a(href=`menus/${menu.slug}`, class="text-2xl text-none no-underline text-gray-900 hover:text-gray-600 visited:text-purple-600") Más Información
                    